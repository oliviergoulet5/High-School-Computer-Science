package {	//SUPER CLASS TO ENEMIES AND AI	import flash.display.*;	import flash.events.*;	public class Mob extends MovieClip {		public var specimen:String;		public var hostile:Boolean;		public var health:int;		public var damage:int;		public var alreadyDropped = false;		public var drops = ["1 Rupee","5 Rupees", "Heart"];		//movement variables		public const SPEED=4;		public var xVelocity=SPEED;		public var yVelocity=0;		public const MAXDISTANCE=50;		//collision variables		public var hitObject=false;		public var lastPos:Array=[];		//Place Holders		public var collisionObjects:Array;		//CONSTRUCTOR		public function Mob() {			stop();			addEventListener(Event.ENTER_FRAME,move);		}		//FUNCTIONS		public function move(event:Event) {			lastPos=[x,y];			for (var i=0; i<collisionObjects.length; i++) {				if (this.hitTestObject(collisionObjects[i])) {					x=lastPos[0]+xVelocity*-1;					y=lastPos[1]+yVelocity*-1;					if ((xVelocity!=0)) {						xVelocity*=-1;					}					else {						yVelocity*=-1;					}					hitObject=true;				}				else {					hitObject=false;				}			}			if ((hitObject==false)) {				var r=Math.ceil(Math.random()*MAXDISTANCE);				//Random Movements				if ((r==1)) {					xVelocity=SPEED*-1;					yVelocity=0;				}				if ((r==2)) {					xVelocity=0;					yVelocity=0;				}				if ((r==3)) {					xVelocity=0;					yVelocity=SPEED*-1;				}				x+=xVelocity;				y+=yVelocity;				//Facing Direction				// IF ALREADY MOVIN				if (((xVelocity>0)&&currentLabel!="RIGHT")) {					gotoAndPlay("RIGHT");				}				else if (((xVelocity==SPEED*-1)&&currentLabel!="LEFT")) {					gotoAndPlay("LEFT");				}				if (((yVelocity==SPEED)&&currentLabel!="DOWN")) {					gotoAndPlay("DOWN");				}				else if (((yVelocity==SPEED*-1)&&currentLabel!="UP")) {					gotoAndPlay("UP");				}				if (((xVelocity==0)&&yVelocity==0)) {					stop();				}			}		}		public function dropItem() {			if (alreadyDropped == false) {				alreadyDropped = true;				var itemDropped = Math.ceil(Math.random() * 30);				if (itemDropped >= 0 && itemDropped <= 15){					var rupee:Rupee=new Rupee(1);					root["world"].addChild(rupee);					rupee.x=x;					rupee.y=y;					root["unclaimedItems"].push(rupee);				}else if (itemDropped > 15 && itemDropped <= 20 ){					var fiveRupees = new Rupee(5);					root["world"].addChild(fiveRupees);					fiveRupees.x=x;					fiveRupees.y=y;					root["unclaimedItems"].push(fiveRupees);				}else if (itemDropped > 20 && itemDropped <= 30){					var heart = new Heart();					root["world"].addChild(heart);					heart.x=x;					heart.y=y;					root["unclaimedItems"].push(heart);				}							}			//not under world		}		public function hit(damageTaken) {			health-=damageTaken;			x=lastPos[0];			y=lastPos[1];			if (health==0) {				dropItem();				var enemyDieSound:EnemyDieSound = new EnemyDieSound();				enemyDieSound.play();				gotoAndPlay("Death");			}		}			}}